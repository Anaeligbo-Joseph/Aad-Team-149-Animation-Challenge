<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/team_tag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
            android:textAllCaps="false" android:textStyle="bold" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="24dp"
            android:id="@+id/teamName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="16dp" android:textAlignment="center" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/loveImageView"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/teamName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_margin="16dp"/>
    <Button
            android:text="RETURN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button3"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="returnAction"/>
    <TextView
            android:text="@string/tv_plg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtNames"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="18sp" android:lineSpacingExtra="18sp"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/loveImageView"
            android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>